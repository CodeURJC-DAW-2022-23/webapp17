<script>
	function salesChart(){
		// Define data
		var axis = [{{#topSales}}{{.}},{{/topSales}}];
		var data = {
			labels: [{{#topProducts}}'{{title}}',{{/topProducts}}],
			datasets: [{
			label: 'Ventas',
			data: axis,
			backgroundColor: [
				'rgba(255, 99, 132, 0.2)',
				'rgba(54, 162, 235, 0.2)',
				'rgba(255, 206, 86, 0.2)',
				'rgba(75, 192, 192, 0.2)',
				'rgba(153, 102, 255, 0.2)'
			],
			borderColor: [
				'rgba(255, 99, 132, 1)',
				'rgba(54, 162, 235, 1)',
				'rgba(255, 206, 86, 1)',
				'rgba(75, 192, 192, 1)',
				'rgba(153, 102, 255, 1)'
			],
				borderWidth: 1
			}]
		};

		// Definimos las opciones de la gr치fica
		var options = {
			responsive: true,
			aspectRatio: 3 / 1,
			maintainAspectRatio: true
		};

		// Creamos el gr치fico
		var ctx = $("#productsChart").get(0).getContext('2d');
		$("#scrollerSales").width(window.innerWidth*0.4*1/5*axis.length);
		var myChart = new Chart(ctx, {
			type: 'bar',
			data: data,
			options: options
		});
	}
	$( document ).ready(function() {
		salesChart();
	});
</script>
