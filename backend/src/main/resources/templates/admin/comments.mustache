<div>
{{> adminMenu}}
<link href="{{#base_domain}}{{base_domain}}{{/base_domain}}{{^base_domain}}/{{/base_domain}}webjars/github-com-fengyuanchen-cropperjs/cropper.min.css" rel="stylesheet" />
        <script src="{{#base_domain}}{{base_domain}}{{/base_domain}}{{^base_domain}}/{{/base_domain}}webjars/github-com-fengyuanchen-cropperjs/cropper.min.js"></script>
<div class="col">
    <div class="row flex-lg-nowrap">
    <script>
    
    $(document).ready(function(){
                setCropper();
            });
</script>
       <div class="col mb-3">
        <div class="e-panel card">
          <div class="card-body">
            <div class="card-title">
              <h6 class="mr-2"><span>Gestión de comentarios</span></h6>
            </div>
            <div class="e-table">
              <div class="table-responsive table-lg mt-3">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th class="max-width">Usuario</th>
                      <th class="max-width">Producto</th>
                      <th class="sortable">Valoración</th>
                      <th class="max-width">Descripción</th>
                      <th class="max-width">Fecha</th>
                      <th class="max-width">Eliminar</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#comments}}                 
                    <tr>
                      <td class="text-nowrap align-middle">{{userProfile.email}}</td>
                      <td class="text-nowrap align-middle"><span>{{product.title}}</span></td>
                      <td class="text-nowrap align-middle">{{rating}}</td>
                      <td class="text-nowrap align-middle">{{description}}</td>
                      <td class="text-nowrap align-middle">{{createdAt}}</td>
                      <td class="text-center align-middle">
                        <div class="btn-group align-top">
                            <a class="btn btn-sm btn-outline-secondary badge" type="button" href="/adminComments/removeComment?id={{id}}"><i class="fa fa-trash"></i></a>
                        </div>
                      </td>
                    </tr>
                    {{/comments}}
                  </tbody>
                </table>
              </div>
              <div class="d-flex justify-content-center">
                <ul class="pagination mt-3 mb-0">
                  <li class="page-item"><a href="?page={{prevPag}}" class="page-link"><<</a></li>
                  <li class="page-item"><a href="?page={{nextPag}}" class="page-link">>></a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
</div>

</div>
    
</div>
</div>
{{> adminMenuFooter}}
</div>