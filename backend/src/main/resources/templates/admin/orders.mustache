<div>
{{> adminMenu}}
<link href="{{#base_domain}}{{base_domain}}{{/base_domain}}{{^base_domain}}/{{/base_domain}}webjars/github-com-fengyuanchen-cropperjs/cropper.min.css" rel="stylesheet" />
        <script src="{{#base_domain}}{{base_domain}}{{/base_domain}}{{^base_domain}}/{{/base_domain}}webjars/github-com-fengyuanchen-cropperjs/cropper.min.js"></script>
<div class="col">
    <div class="row flex-lg-nowrap">
    <script>
    
    $(document).ready(function(){
            });
</script>
      <div class="col mb-3">
        <div class="e-panel card">
          <div class="card-body">
            <div class="card-title">
              <h6 class="mr-2"><span>Gestión de Pedidos</span></h6>
            </div>
            <div class="e-table">
              <div class="table-responsive table-lg mt-3">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th class="max-width">Numero</th>
                      <th class="max-width">Usuario</th>
                      <th class="sortable">Fecha de última modificación</th>
                      <th>Estado</th>
                      <th>Acciones</th>
                    </tr>
                  </thead>
                  <tbody>

                    {{#orders}}                 
                    <tr>
                      <td class="text-nowrap align-middle">{{id}} <a href="/user/{{createdBy.id}}/order?orderId={{id}}">Detalle</td>
                      <td class="text-nowrap align-middle">{{createdBy.email}}</td>
                      <td class="text-nowrap align-middle"><span>{{createdAt}}</span></td>
                      <td class="text-nowrap align-middle">{{#isPreparing}}<span class="badge bg-primary">En preparación</span>{{/isPreparing}}
                                                {{^isPreparing}}<span class="badge bg-success">Pedido cerrado</span>{{/isPreparing}}
                      </td>
                      <td class="text-center align-middle">
                        <div class="btn-group align-top">
                            <form id="form{{id}}" method="post" action="/adminOrders?id={{id}}&action=2"></form>
                            <a class="btn btn-sm btn-outline-secondary badge" type="button" onclick="document.getElementById('form{{id}}').submit();"><i class="fa fa-check"></i></a>
                            <form id="form2{{id}}" method="post" action="/adminOrders?id={{id}}&action=1"></form>
                            <a class="btn btn-sm btn-outline-secondary badge" type="button" onclick="document.getElementById('form2{{id}}').submit();"><i class="fa fa-trash"></i></a>
                        </div>
                      </td>
                    </tr>
                    {{/orders}}
                  </tbody>
                </table>
              </div>
              <div class="d-flex justify-content-center">
                <ul class="pagination mt-3 mb-0">
                  <li class="page-item"><a href="?page={{prevPag}}" class="page-link"><<</a></li>
                  <li class="page-item"><a href="?page={{nextPag}}" class="page-link">>></a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
</div>

</div>
    
</div>
</div>
{{> adminMenuFooter}}
</div>