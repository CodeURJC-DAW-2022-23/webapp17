                        user = responseData["name"];
                        if(user){
                            $("#user_button").html("\<i class=\"bi-person-circle me-1\"><\/i\>"+user);
                            $("#user_button").attr("href","/profile");
                            $("#user_button").parent().append("<a class=\"btn\" href=\"\/logout\">\r\n<i class=\"bi bi-box-arrow-in-right\"><\/i>\r\n<\/a>");
                        }
                    }
                });
            }
        );
